//- Header values
block header
	img(alt='Upload A Document', id='imgUpload', src='images/uploadIcon.svg', title='Upload a Document')
	img(alt='Save Changes', id='imgSave', src='images/saveIcon.svg', title='Save Changes')
	img(alt='logo', id='imgLogo', src='images/logo.svg')

//- Navigation for the Home Page
block nav
	#nav
		div(class='borderRight')
			img(src='images/nav/html.svg', alt='Code', title='Write Code', id='codeIcon')
		div
			img(src='images/nav/bold.svg', alt='Bold', title='Bold', id='boldIcon')
		div
			img(src='images/nav/italics.svg', alt='italics', title='Italics', id='italicsIcon')
		div
			img(src='images/nav/underline.svg', alt='underline', title='Underline', id='underlineIcon')
		div(class='borderRight')
			img(src='images/nav/strike.svg', alt='strike', title='Deleted', id='strikeIcon')
		div(class='borderRight')
			select#fontStyle
				- var fonts = ['Arial','Arial Narrow','Arial Rounded MT Bold','Book Antiqua','Bookman OldStyle','Bradley Hand ITC','Cambria','Century Gothic','Comic Sans MS','Courier New','Franklin Gothic Medium','Garamond','Haettenschweiler','Harrington','Impact','Lucida Bright','Lucida Calligraphy','Lucida Console','Lucida Sans','Lucida Sans Typewriter','Lucida Sans Unicode','Mistral','Monospace','MS Mincho','Onyx','Papyrus','Perpetua','Perpetua Titling MT','Playbill','Rockwell','Rockwell Extra Bold','Stencil','Tahoma','Times','Trebuchet MS','Tw Cen MT','Verdana','Wide Latin','Wingdings'];

				each font in fonts
					option(value=font)= font

		div(class='borderRight')
			select#fontSize
				- var sizes = [10,12,14,16,18,20,24,28,36,42,48,56,64,72]
				each size in sizes
					option(value=size)= size

		div
			img(src='images/nav/undo.svg', alt='undo', title='Undo', id='undoIcon')
		div(class='borderRight')
			img(src='images/nav/redo.svg', alt='redo', title='Redo', id='redoIcon')
		div
			img(src='images/nav/subscript.svg', alt='subscript', title='Subscript', id='subscriptIcon')
		div(class='borderRight')
			img(src='images/nav/superscript.svg', alt='superscript', title='Superscript', id='superscriptIcon')
		div
			img(src='images/nav/fontColor.svg', alt='font color', title='Font Color', id='fontcolorIcon')
		div
			img(src='images/nav/colorFill.svg', alt='Backcolor fill', title='Background Color', id='backcolorIcon')
		div
			img(src='images/nav/insertImage2.svg', alt='insert image', title='Insert Image', id='insertimageIcon')
		div
			img(src='images/nav/insertVideo.svg', alt='Insert Video', title='Insert Video', id='insertvideoIcon')
		div(class='borderRight')
			img(src='images/nav/link.svg', alt='create link', title='Create Link', id='linkIcon')
		div
			img(src='images/nav/alignLeft.svg', alt='align left', title='Align Left', id='alignleftIcon')
		div
			img(src='images/nav/alignCenter.svg', alt='align center', title='Align Center', id='aligncenterIcon')
		div
			img(src='images/nav/alignRight.svg', alt='align right', title='Align Right', id='alignrightIcon')
		div(class='borderRight')
			img(src='images/nav/alignJustify.svg', alt='Justify', title='Justify Text', id='justifyIcon')
		div(class='borderRight')
			img(src='images/nav/hr.svg', alt='hr', title='Horizontal Line', id='hrIcon')
