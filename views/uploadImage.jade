			img(src='images/nav/settings.svg', alt='settings', title='Settings', id='settingsIcon')

//- Add up the textArea div & and CodeMirror Div.
block edit
	#codeProperties(class='hideDiv')
		p Select a theme: <select id="select"><option selected>default</option><option>ambiance</option><option>blackboard</option><option>cobalt</option><option>eclipse</option><option>elegant</option><option>erlang-dark</option><option>lesser-dark</option><option>monokai</option><option>neat</option><option>night</option><option>rubyblue</option><option>vibrant-ink</option><option>xq-dark</option></select>

		p
			label <input type="checkbox" value="EnableHTMLCompletion" id="HTMLComplete" />Enable XHTML / XML Automatic Close Tag

		p(class='hoverMee', class='poss', id='lang') <img src="images/expand.svg" alt="expand"/>Select Programming Language

		p(class='hoverMee', id='instructions') <img src="images/expand.svg" alt="expand"/>View Instructions
		
	#textArea(contenteditable='true', class='setTextArea')
		img(src= path )

	textarea(id='textAreaCode', class='expandTextArea')